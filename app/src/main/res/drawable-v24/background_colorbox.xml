<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black" /> <!--검정 -> 테두리 색-->

        </shape>


    </item>

    <item android:top = "1dp"
        android:right= "1dp"
        android:left="1dp"
        android:bottom="1dp">

        <shape android:shape="rectangle">
            <solid android:color="#ffffff" /> <!--흰색 -> 바탕색 -->
            <size
                android:width="100dp"
                android:height="100dp"/>
        </shape>

    </item>

</layer-list>

